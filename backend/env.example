# Code Racer Backend Environment Variables
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 설정하세요

# =============================================================================
# 데이터베이스 설정
# =============================================================================

# PostgreSQL 데이터베이스 호스트
DB_HOST=localhost

# PostgreSQL 데이터베이스 사용자
DB_USER=postgres

# PostgreSQL 데이터베이스 비밀번호
DB_PASSWORD=your_password_here

# PostgreSQL 데이터베이스 이름
DB_NAME=code_racer

# PostgreSQL 데이터베이스 포트
DB_PORT=5432

# =============================================================================
# Redis 설정
# =============================================================================

# Redis 호스트
REDIS_HOST=localhost

# Redis 포트
REDIS_PORT=6379

# Redis 사용자명 (선택사항)
REDIS_USERNAME=default

# Redis 비밀번호 (선택사항)
REDIS_PASSWORD=

# =============================================================================
# JWT 설정
# =============================================================================

# JWT 시크릿 키 (강력한 랜덤 문자열 사용)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# =============================================================================
# 서버 설정
# =============================================================================

# 서버 포트
PORT=8080

# 프론트엔드 URL (CORS 설정용)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Judge0 API 설정
# =============================================================================

# Judge0 API 키 (RapidAPI에서 발급)
JUDGE0_API_KEY=your_judge0_api_key_here

# Judge0 API 엔드포인트
JUDGE0_API_ENDPOINT=https://judge0-ce.p.rapidapi.com

# =============================================================================
# OAuth 설정 - Google
# =============================================================================

# Google OAuth 클라이언트 ID
GOOGLE_CLIENT_ID=your_google_client_id_here

# Google OAuth 클라이언트 시크릿
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google OAuth 리다이렉트 URI
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/google/callback

# =============================================================================
# OAuth 설정 - GitHub
# =============================================================================

# GitHub OAuth 클라이언트 ID
GITHUB_CLIENT_ID=your_github_client_id_here

# GitHub OAuth 클라이언트 시크릿
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# GitHub OAuth 리다이렉트 URI
GITHUB_REDIRECT_URI=http://localhost:8080/api/auth/github/callback

# =============================================================================
# 환경 설정
# =============================================================================

# 애플리케이션 환경 (development, staging, production)
ENVIRONMENT=development

# 로그 레벨 (debug, info, warn, error)
LOG_LEVEL=debug

# =============================================================================
# 보안 설정
# =============================================================================

# CORS 허용된 오리진 (쉼표로 구분)
# 운영환경에서는 실제 프론트엔드 도메인을 추가하세요
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# =============================================================================
# 성능 설정
# =============================================================================

# 데이터베이스 연결 풀 최대 연결 수
DB_MAX_OPEN_CONNS=25

# 데이터베이스 연결 풀 최대 유휴 연결 수
DB_MAX_IDLE_CONNS=5

# 데이터베이스 연결 최대 수명
DB_CONN_MAX_LIFETIME=5m

# Redis 연결 풀 크기
REDIS_POOL_SIZE=10

# =============================================================================
# 모니터링 설정
# =============================================================================

# 메트릭 수집 활성화
ENABLE_METRICS=true

# 헬스체크 엔드포인트 활성화
ENABLE_HEALTH_CHECK=true

# =============================================================================
# 개발 전용 설정
# =============================================================================

# 개발 모드에서만 사용되는 설정들
# 프로덕션에서는 이 값들을 설정하지 마세요

# 자동 마이그레이션 실행 (개발 환경에서만 true)
AUTO_MIGRATE=true

# 시드 데이터 로드 (개발 환경에서만 true)
LOAD_SEED_DATA=true

# 디버그 모드 활성화 (개발 환경에서만 true)
DEBUG_MODE=true
